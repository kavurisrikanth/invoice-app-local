Style {
    name 'Danger'
    component Button
    items [
        {
            values {
                decoration {
                    border {
                        color '@c18'
                        width '1.0'
                    }
                    borderRadius '3'
                    color '@c8'
                }
                padding '7'
                constraints {
                    minHeight '30'
                }
                textStyle {
                    color '@c2'
                }
            }
        }
        {
            selector ':hover'
            values {
                decoration {
                    border {
                        color '@c18'
                        width '1.0'
                    }
                    borderRadius '3'
                    color '@c9'
                }
                padding '7'
                constraints {
                    minHeight '30'
                }
                textStyle {
                    color '@c2'
                }
            }
        }
    ]
}